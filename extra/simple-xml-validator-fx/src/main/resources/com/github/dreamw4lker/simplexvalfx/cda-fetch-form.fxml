<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="1000.0" spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.dreamw4lker.simplexvalfx.controllers.CDAFetcherController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <HBox alignment="CENTER_LEFT">
        <children>
            <Label text="Интерфейс для выгрузки XSD / Schematron-файлов из репозитория" />
            <Hyperlink fx:id="minzdravLink" text="git.minzdrav.gov.ru" />
        </children>
    </HBox>
    <HBox>
        <children>
            <TextField fx:id="loginField" promptText="Логин">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="Пароль">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </PasswordField>
            <Button fx:id="submitBtn" prefHeight="26.0" prefWidth="81.0" text="Скачать" />
        </children>
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </HBox>
    <TextArea fx:id="logField" editable="false" VBox.vgrow="ALWAYS">
        <font>
            <Font name="DejaVu Sans Mono" size="13.0" />
        </font>
    </TextArea>
</VBox>
